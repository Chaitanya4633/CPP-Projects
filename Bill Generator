int chicken(int tch)
 {
    int sk=0,skless=0;
    sk=tch;
    skless=tch+10;
    int c;
    cin>>c;
    switch(c)
    {
        case 1:skin(sk);
               break;
        case 2:skinless(skless);
               break;
        default:cout<<"INVALID OPTION";    
        
    }

  }
float rateofskin(float &skkg,float &s)
{
     
    float slee,amtt;
    slee=s/1000;
   // cout<<slee<<"\n";
    amtt=slee*skkg;
     cout<<"      "<<"  AMOUNT="<<amtt;
}
float rateofskinless(float &sklekg,float &l)
{

    float amt,sle;
    sle=(l)/1000;
    amt=sle*sklekg;
    cout<<"      "<<"  AMOUNT="<<amt;
}


